  <h1>Complain About Your Job</h1>
  <p><i>100% anonymous</i></p>
  
  <form id="complaintForm">
    <input type="text" id="employer" placeholder="Company Name (e.g., Amazon)" required><br><br>
    <input type="text" id="role" placeholder="Your Role (e.g., Cashier)"><br><br>
    <textarea id="complaint" placeholder="What pissed you off today?" required></textarea><br>
    <button type="submit">Submit Anonymously</button>
  </form>

  <script>
    document.getElementById("complaintForm").addEventListener("submit", (e) => {
      e.preventDefault();
      const employer = document.getElementById("employer").value;
      const role = document.getElementById("role").value;
      const complaint = document.getElementById("complaint").value;
      
      // Push to Firebase
      db.ref("complaints").push({
        employer: employer,
        role: role || "Not specified",
        complaint: complaint,
        timestamp: new Date().toISOString()
      }).then(() => {
        alert("Complaint submitted! ðŸŽ‰");
        document.getElementById("complaintForm").reset();
      }).catch((error) => {
        alert("Error: " + error.message);
      });
    });
  </script>
